{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "./chainHandler/typechain/",
    "./chainHandler/deploy",
    "./chainHandler/utils/**/*"
  ],
  "exclude": ["./bot", "./node_modules", "./dist"],
  "files": ["./hardhat.config.ts"]
}
