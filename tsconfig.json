{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDirs": ["./"],
    "baseUrl": "./",
    "paths": {
      "@localTypes": ["./types"],
      "@constants": ["./constants"],
      "@logger": ["./logger"],
      "@dist/*": ["./dist/*"],
      "@resources/*": ["./resources/*"],
      "@tasks/*": ["./tasks/*"],
      "@deployments/*": ["./deployments/*"],
      "@chainHandler/*": ["./chainHandler/*"],
      "@bot/*": ["./bot/*"]
    }
  },
  "include": [
    "./hardhat.config.ts",
    "./logger",
    "./test",
    "./scripts",
    "./utils",
    "./tasks",
    "./chainHandler/typechain",
    "./chainHandler/deploy",
    "./chainHandler/utils"
  ],
  "exclude": ["./bot", "./node_modules"],
  "files": ["./hardhat.config.ts"]
}
