{
  "name": "when-lambo-smart-contracts",
  "version": "1.0.1",
  "description": "Smart contracts for When Lambo",
  "author": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "tsc": "tsc --noEmit",
    "test": "hardhat test",
    "format": "npm-run-all format:*",
    "format:json": "prettier --write \"**/*.json\"",
    "format:ts": "prettier --write \"**/*.ts\"",
    "bot:predeploy": "rm -rf ./dist && ./node_modules/.bin/esbuild bot/index.ts --bundle --outfile=./dist/index.js --platform=node && npm version patch --no-git-tag-version && PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git commit -a -m \"Publish version $PACKAGE_VERSION\" && git push origin master && git checkout develop && git rebase master && git push origin develop && git checkout master",
    "bot:deploy": "npx pm2 deploy one update --force && npx pm2 deploy two update --force && npx pm2 deploy three update --force && npx pm2 deploy four update --force && npx pm2 deploy five update --force && npx pm2 deploy six update --force"
  },
  "license": "ISC",
