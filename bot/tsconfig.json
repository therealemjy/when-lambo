{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "target": "es6",
    "skipLibCheck": true,
    "rootDirs": ["./"],
    "baseUrl": "./",
    "types": ["@types/node"],
    "sourceMap": true,
    "outDir": "../dist/bot",
    "paths": {
      "@localTypes": ["../types"],
      "@constants": ["../constants"],
      "@logger": ["../logger"],
      "@root/*": ["../*"],
      "@utils/*": ["../utils/*"],
      "@dist/*": ["../dist/*"],
      "@tasks/*": ["../tasks/*"],
      "@resources/*": ["../resources/*"],
      "@deployments/*": ["../deployments/*"],
      "@chainHandler/*": ["../chainHandler/*"],
      "@bot/*": ["./*"],
      "@communicator/*": ["../communicator/*"],
      "@scripts/*": ["../scripts/*"]
    },
    "lib": ["es2020"]
  }
}
